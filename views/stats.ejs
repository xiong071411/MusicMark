<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= siteName %> - 统计</title>
  <link rel="stylesheet" href="/static/styles.css" />
  <meta name="color-scheme" content="light dark" />
</head>
<body>
  <header class="topbar">
    <div class="brand"><%= siteName %></div>
    <nav>
      <a href="/dashboard">听歌记录</a>
      <a class="active" href="/stats">统计</a>
      <% if (currentUser && currentUser.role === 'admin') { %>
        <a href="/admin/users">用户管理</a>
      <% } %>
      <form method="post" action="/logout" style="display:inline">
        <button type="submit" class="btn">退出</button>
      </form>
    </nav>
  </header>
  <main class="container">
    <div class="inline" style="justify-content:space-between;align-items:flex-end;flex-wrap:wrap">
      <div>
        <h2>统计</h2>
        <div class="subtitle">你的听歌概览</div>
      </div>
    </div>

    <section class="grid-2 mt-2">
      <div class="card shadow">
        <h3>总览</h3>
        <div class="inline mt-1" style="flex-wrap:wrap">
          <div class="card" style="min-width:140px">
            <div class="subtitle">总条数</div>
            <div style="font-weight:700;font-size:1.25rem"><%= stats.total_count %></div>
          </div>
          <div class="card" style="min-width:140px">
            <div class="subtitle">总时长</div>
            <% const td_m = Math.floor((stats.total_duration_sec||0)/60); const td_s = (stats.total_duration_sec||0)%60; %>
            <div style="font-weight:700;font-size:1.25rem"><%= td_m %>:<%= String(td_s).padStart(2,'0') %></div>
          </div>
          <div class="card" style="min-width:140px">
            <div class="subtitle">独立歌曲</div>
            <div style="font-weight:700;font-size:1.25rem"><%= stats.unique_titles %></div>
          </div>
        </div>
      </div>

      <div class="card">
        <h3>来源分布</h3>
        <% if (!stats.sources || stats.sources.length === 0) { %>
          <p class="muted">暂无数据</p>
        <% } else { %>
          <div class="table-wrap">
          <table class="table">
            <thead><tr><th>来源</th><th>条数</th></tr></thead>
            <tbody>
              <% stats.sources.forEach(s => { %>
                <tr><td><%= s.name %></td><td><%= s.count %></td></tr>
              <% }) %>
            </tbody>
          </table>
          </div>
        <% } %>
      </div>
    </section>

    <section class="card mt-2">
      <h3>每日趋势</h3>
      <% if (!stats.daily || stats.daily.length === 0) { %>
        <p class="muted">暂无数据</p>
      <% } else { %>
        <div class="table-wrap">
        <table class="table">
          <thead>
            <tr>
              <th>日期</th>
              <th>条数</th>
              <th>独立歌曲</th>
              <th>时长</th>
            </tr>
          </thead>
          <tbody>
            <% stats.daily.forEach(d => { %>
              <% const dm = Math.floor((d.duration_sec||0)/60); const ds = (d.duration_sec||0)%60; %>
              <tr>
                <td><%= d.date %></td>
                <td><%= d.count %></td>
                <td><%= d.unique_titles %></td>
                <td><%= dm %>:<%= String(ds).padStart(2,'0') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        </div>
      <% } %>
    </section>
  </main>
</body>
</html>



