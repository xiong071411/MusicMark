<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= siteName %> - 听歌记录</title>
  <link rel="stylesheet" href="/static/styles.css" />
  <meta name="color-scheme" content="light dark" />
</head>
<body>
  <header class="topbar">
    <div class="brand"><%= siteName %></div>
    <nav>
      <a class="active" href="/dashboard">听歌记录</a>
      <a href="/stats">统计</a>
      <a href="/settings">设置</a>
      <% if (currentUser && currentUser.role === 'admin') { %>
        <a href="/admin/users">用户管理</a>
      <% } %>
      <form method="post" action="/logout" style="display:inline">
        <button type="submit" class="btn">退出</button>
      </form>
    </nav>
  </header>
  <main class="container">
    <div class="inline" style="justify-content:space-between;align-items:flex-end;flex-wrap:wrap">
      <div>
        <h2>听歌记录</h2>
        <div class="subtitle">最近播放轨迹</div>
      </div>
    </div>
    <div class="card mt-2 desktop-only">
    <form method="post" action="/listens/delete">
    <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th style="width:36px"><input type="checkbox" id="selectAllDesktop" /></th>
          <th>开始时间</th>
          <th>歌曲名</th>
          <th>歌手</th>
          <th>专辑</th>
          <th>来源</th>
          <th>时长</th>
        </tr>
      </thead>
      <tbody>
        <% if (!listens || listens.length === 0) { %>
          <tr><td colspan="7" style="text-align:center" class="muted">暂无记录</td></tr>
        <% } else { %>
          <% listens.forEach(item => { %>
            <tr>
              <td><input type="checkbox" name="ids" value="<%= item.id %>" class="rowCheckDesktop" /></td>
              <td><%= new Date(item.started_at * 1000).toLocaleString() %></td>
              <td><%= item.title %></td>
              <td><%= item.artist || '' %></td>
              <td><%= item.album || '' %></td>
              <td><%= item.source || '' %></td>
              <td>
                <% if (typeof item.duration_sec === 'number' && item.duration_sec > 0) { %>
                  <% const m = Math.floor(item.duration_sec / 60); const s = item.duration_sec % 60; %>
                  <%= m %>:<%= String(s).padStart(2,'0') %>
                <% } else { %>
                  <span class="muted">—</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
    </div>
    <div class="inline" style="justify-content:space-between;align-items:center;margin-top:8px">
      <div></div>
      <button type="submit" class="btn danger" onclick="return confirm('确认删除选中的记录？不可恢复');">删除所选</button>
    </div>
    </form>
    </div>

    <!-- Mobile list -->
    <div class="mobile-only mt-2">
      <% if (!listens || listens.length === 0) { %>
        <div class="card muted">暂无记录</div>
      <% } else { %>
        <form method="post" action="/listens/delete" class="stack">
          <% listens.forEach(item => { %>
            <div class="card">
              <div class="inline" style="justify-content:space-between">
                <div style="display:flex;gap:8px;align-items:center;max-width:70%">
                  <input type="checkbox" name="ids" value="<%= item.id %>" />
                  <div class="ellipsis" style="max-width:100%"><strong><%= item.title %></strong></div>
                </div>
                <div class="muted" style="font-size:.9rem"><%= new Date(item.started_at * 1000).toLocaleString() %></div>
              </div>
              <div class="subtitle ellipsis"><%= item.artist || '' %> <%= item.album ? ('· ' + item.album) : '' %></div>
              <div class="inline" style="justify-content:space-between">
                <div class="muted"><%= item.source || '' %></div>
                <div>
                  <% if (typeof item.duration_sec === 'number' && item.duration_sec > 0) { %>
                    <% const m = Math.floor(item.duration_sec / 60); const s = item.duration_sec % 60; %>
                    <%= m %>:<%= String(s).padStart(2,'0') %>
                  <% } else { %>
                    <span class="muted">—</span>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
          <div style="display:flex;justify-content:flex-end;margin-top:8px">
            <button type="submit" class="btn danger" onclick="return confirm('确认删除选中的记录？不可恢复');">删除所选</button>
          </div>
        </form>
      <% } %>
    </div>

    <div style="display:flex;justify-content:space-between;align-items:center;margin-top:12px">
      <div>共 <%= typeof total !== 'undefined' ? total : (listens?.length || 0) %> 条</div>
      <% if (typeof page !== 'undefined') { %>
        <div class="inline">
          <a class="btn" href="/dashboard?page=1&limit=<%= pageSize %>">« 首页</a>
          <a class="btn" href="/dashboard?page=<%= Math.max(1, page - 1) %>&limit=<%= pageSize %>">‹ 上一页</a>
          <span>第 <%= page %> / <%= totalPages %> 页</span>
          <a class="btn" href="/dashboard?page=<%= Math.min(totalPages, page + 1) %>&limit=<%= pageSize %>">下一页 ›</a>
          <a class="btn" href="/dashboard?page=<%= totalPages %>&limit=<%= pageSize %>">末页 »</a>
        </div>
      <% } %>
    </div>
  </main>
  <script>
    (function() {
      var all = document.getElementById('selectAllDesktop');
      if (all) {
        all.addEventListener('change', function() {
          document.querySelectorAll('.rowCheckDesktop').forEach(function(cb){ cb.checked = all.checked; });
        });
      }
    })();
  </script>
</body>
</html>


